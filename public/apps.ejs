  <style>

h1 {
    margin: 0;
}

main {
    padding: 20px;
}

.game-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.game-item {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 300px;
    height: 400px;
    transition: transform 0.2s;
}

.game-item:hover {
    transform: translateY(-5px);
    transform: scale(1.20);
}

.game-item img {
    width: 100%;
    height: 300px;
}

.game-info {
    padding: 15px;
    text-align: center;
}

h2 {
    font-size: 1.5em;
