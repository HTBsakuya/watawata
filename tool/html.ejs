<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>URL入力</title>
</head>
<body>
  <h1>URLをリプレイスしてリダイレクト</h1>
  <button id="redirectButton">URLを入力してリダイレクト</button>

  <script>
    document.getElementById('redirectButton').addEventListener('click', () => {
      const url = prompt('URLを入力して下さい');

      if (!url) {
        alert('URLが提供されていません');
        return;
      }

      // URL内の「.」を「.h.」にリプレイス
      const replacedUrl = url.replace(/\./g, '.h.');

      // リダイレクト先のURLを作成
      const redirectUrl = `/gethtml/${encodeURIComponent(replacedUrl)}`;

      // リダイレクト
      window.location.href = redirectUrl;
    });
  </script>
</body>
</html>
