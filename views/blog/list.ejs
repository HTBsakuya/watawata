    /* 全体のスタイル */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f9f9f9;
      color: #333;
      margin: 0;
      padding: 0;
      line-height: 1.6;
    }

    header {
      background-color: #4CAF50;
      color: #fff;
      padding: 20px 0;
      text-align: center;
