    }

    /* ブログカードのスタイル */
    .blog-list {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .blog-card {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 10px;
      width: 30%;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: transform 0.3s ease;
    }

    .blog-card:hover {
      transform: translateY(-5px);
    }

    .blog-card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }

    .blog-card-content {
      padding: 20px;
    }

    .blog-card-title {
      font-size: 1.5em;
      margin: 0;
      color: #333;
    }

    .blog-card-excerpt {
      font-size: 1em;
      color: #666;
      margin: 10px 0;
    }

    .blog-card a {
      display: inline-block;
      margin-top: 10px;
      color: #4CAF50;
      text-decoration: none;
      font-weight: bold;
    }

    .blog-card a:hover {
      text-decoration: underline;
    }

