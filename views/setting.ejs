<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>設定</title>
    <script>
        function loadSettings() {
            const wakames = localStorage.getItem('wakames') === 'true';
            document.getElementById('wakames').checked = wakames;
        }

        function saveSettings() {
            const wakames = document.getElementById('wakames').checked;
            localStorage.setItem('wakames', wakames);
            alert('設定が保存されました');
        }

        window.onload = loadSettings;
    </script>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/font.css">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="/js/bootstrap.min.js"></script>
</head>
<body>
   <header>
    <div class="banner">
      <button class="btn btn-link" onclick="window.location.href='/'">ホーム🏠</button>
      <button class="btn btn-link" onclick="window.location.href='/blog'">お知らせ</button>
      <!-- 他のボタンもここに追加できます -->
      <form class="d-flex" action="/s">
        <input type="text" name="q" class="form-control" placeholder="キーワードを入力..." required>
      </form>
      <button class="btn btn-link" style="position: absolute; right: 10px;" onclick="window.location.href='/send'">問い合わせ</button>
    </div>
  </header>
    <form onsubmit="saveSettings(); return false;">
        <label for="wakames">わかめを食べるか？</label>
        <input type="checkbox" id="wakames">
        <button type="submit">保存</button>
    </form>
</body>
</html>