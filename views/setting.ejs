<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>設定</title>
    <script>
        function loadSettings() {
            const wakames = localStorage.getItem('wakames') === 'true';
            document.getElementById('wakames').checked = wakames;
        }

        function saveSettings() {
            const wakames = document.getElementById('wakames').checked;
            localStorage.setItem('wakames', wakames);
            alert('設定が保存されました');
        }

        window.onload = loadSettings;
    </script>
</head>
<body>
    <form onsubmit="saveSettings(); return false;">
        <label for="wakames">わかめを食べるか？</label>
        <input type="checkbox" id="wakames">
        <button type="submit">保存</button>
    </form>
</body>
</html>