<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search with Suggestions</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            margin-top: 50px;
        }
        .search-bar {
            position: relative;
            max-width: 600px;
            margin: 0 auto;
        }
        .form-control {
            padding-right: 80px; /* Space for the button */
        }
        .btn-search {
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            border-radius: 0;
        }
        #suggestions {
            border: 1px solid #ddd;
            max-height: 150px;
            overflow-y: auto;
            position: absolute;
            background: white;
            width: 100%;
            z-index: 1000;
        }
        #suggestions div {
            padding: 8px;
            cursor: pointer;
        }
        #suggestions div:hover {
            background: #f0f0f0;
        }
    </style>
</head>
<body>
    <main class="container text-center">
        <div class="search-bar">
            <form action="/s" method="get">
                <input type="text" name="q" id="search" class="form-control" placeholder="キーワードを入力..." required>
                <button type="submit" class="btn btn-search btn-primary">検索(けんさく)</button>
            </form>
            <div id="suggestions"></div>
        </div>
    </main>
    <script>
 document.getElementById('search').addEventListener('input', async function() {
    const query = this.value;
    if (query.length < 2) {
        document.getElementById('suggestions').innerHTML = '';
        return;
    }

    try {
        const response = await fetch(`/suggestions?q=${encodeURIComponent(query)}`);
        const suggestions = await response.json();
        console.log('Suggestions:', suggestions); // デバッグ用
        const suggestionsBox = document.getElementById('suggestions');
        suggestionsBox.innerHTML = suggestions.map(s => `<div>${s}</div>`).join('');
    } catch (error) {
        console.error('Error fetching suggestions:', error); // エラー表示
    }
});
    </script>
</body>
</html>
